<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- your initial code in your <app>_view.xml -->
        <record id="action_todo_task" model="ir.actions.act_window">
            <field name="name">Tasca per fer</field>
            <field name="res_model">todo.task</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_type">form</field>
            <field name="context">{"search_default_filter_to_sell":1}</field>
            <field name="help" type="html">
                <p>Per crear una tasca nova apreta el bot√≥ Crea.</p>
            </field>
        </record>

        <!-- after the action, you can now paste your menu declaration
        your specified "action", "id","name","sequence" and "parent"-->

        <menuitem action="action_todo_task"
                  id="menu_todo_task" sequence="20" name="Tasques per fer (1)"/>

        <record id="view_form_todo_task" model="ir.ui.view">
            <field name="name">To-do Task Form</field>
            <field name="model">todo.task</field>
            <field name="arch" type="xml">
                <form string="To-do Task">
                    <header>
                        <button name="do_toggle_done" type="object"
                                string="Toggle Done" class="oe_highlight"/>
                        <button name="do_clear_done" type="object"
                                string="Clear All Done"/>
                    </header>
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="name"/>
                            </group>
                            <group name="group_right">
                                <field name="is_done"/>
                                <field name="active" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tree_todo_task" model="ir.ui.view">
            <field name="name">To-do Task Tree</field>
            <field name="model">todo.task</field>
            <field name="arch" type="xml">
                <tree colors="gray:is_done==True">
                    <field name="name"/>
                    <field name="is_done"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>